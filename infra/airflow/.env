# Airflow 기본 설정
AIRFLOW_UID=50000
AIRFLOW_GID=0
AIRFLOW_VERSION=2.10.5

# PostgreSQL 설정
POSTGRES_USER=airflow
POSTGRES_PASSWORD=secure_airflow_password
POSTGRES_DB=airflow

# Airflow 관리자 설정
AIRFLOW_ADMIN_USER=admin
AIRFLOW_ADMIN_PASSWORD=secure_admin_password
AIRFLOW_ADMIN_EMAIL=keemgdeok@gmail.com

# 보안 설정
AIRFLOW__CORE__FERNET_KEY=
AIRFLOW__WEBSERVER__SECRET_KEY=secure_webserver_secret_key

# 네트워크 설정
DOCKER_NETWORK_NAME=npl-network

# 알림 설정
ENABLE_NOTIFICATIONS=true
SLACK_WEBHOOK_URL=
MS_TEAMS_WEBHOOK_URL=
ALERT_EMAIL_RECIPIENTS=keemgdeok@gmail.com

# 서비스 설정
KAFKA_BOOTSTRAP_SERVERS=kafka:29092
MONGODB_URI=mongodb://mongodb:27017
DATABASE_NAME=news_db

# MongoDB 컬렉션 설정
MONGODB_NEWS_COLLECTION=news_articles
MONGODB_PROCESSED_COLLECTION=processed_articles
MONGODB_TOPICS_COLLECTION=topic_articles
MONGODB_SENTIMENT_COLLECTION=sentiment_articles
MONGODB_SUMMARY_COLLECTION=summary_articles

# Kafka 토픽 설정
KAFKA_EXPECTED_TOPICS=news.economy.raw,news.economy.processed,news.economy.sentiment

# AWS S3 설정
AWS_ACCESS_KEY_ID=
AWS_SECRET_ACCESS_KEY=
AWS_REGION=ap-northeast-2
S3_BUCKET_NAME=news-archive
